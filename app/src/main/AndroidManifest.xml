<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.doitpomo">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.doitpomo.Activities.AboutActivity"
            android:label="About"
            android:theme="@style/AppTheme"></activity>
        <activity android:name="com.example.doitpomo.Activities.ArchiveActivity"
            android:label="Completed Tasks"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.doitpomo.Activities.MainActivity"
            android:label="@string/title_activity_list"
            android:theme="@style/AppTheme.DoItPomo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.doitpomo.Activities.DetailsPomoActivity"
            android:label="pomo_details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <service android:name=".Sync.TimerBroadcastService"
            android:exported="false" />
    </application>

</manifest>